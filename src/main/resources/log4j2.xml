<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
    <Properties>
        <Property name="log-path">logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    %d{yyyy-MM-dd HH:mm:ss} %50.50c{1.} %20.20M %highlight{[%-5level]@%3.3L} - %m%n
                </pattern>

            </PatternLayout>
        </Console>
        <RollingFile name="core-log" fileName="${log-path}/payment.log"
                     filePattern="${log-path}/payment-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{yyyy-MM-dd HH:mm:ss} [%t] %c{10} - %msg%n
                </pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"
                                           modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root>
            <AppenderRef ref="Console-Appender"/>
        </Root>
        <Logger name="vn.kmedia.affiliate" level="trace" additivity="false">
            <AppenderRef ref="core-log" level="debug"/>
            <AppenderRef ref="Console-Appender" level="debug"/>
        </Logger>
    </Loggers>
</Configuration>
